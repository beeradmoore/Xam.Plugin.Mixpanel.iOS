<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-ios;net10.0-ios</TargetFrameworks>
    <RuntimeIdentifiers>ios-arm64;iossimulator-arm64;iossimulator-x64</RuntimeIdentifiers>

    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>

    <!--
      Enable trim analyzers for class libraries.
      To learn more, see: https://learn.microsoft.com/dotnet/core/deploying/trimming/prepare-libraries-for-trimming
    -->
    <IsTrimmable>true</IsTrimmable>

    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    
    <!-- Nuget package -->
    <PackageId>Xam.Plugin.Mixpanel.iOS</PackageId>
    <Version>5.0.9</Version>
    <Description>Xamarin.iOS bindings for Mixpanel (Objective-C).</Description>
    <PackageTags>mixpanel, xamarin, xamarin.ios, ios</PackageTags>
    <Authors>beeradmoore</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/beeradmoore/Xam.Plugin.Mixpanel.iOS</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <NativeReference Include="Mixpanel.xcframework">
      <Kind>Framework</Kind>
      <Frameworks>UIKit, Foundation, SystemConfiguration, CoreTelephony, Accelerate, CoreGraphics, QuartzCore, StoreKit</Frameworks>
    </NativeReference>
  </ItemGroup>
  
  <ItemGroup>
    <ObjcBindingApiDefinition Include="ApiDefinition.cs" />
    <ObjcBindingCoreSource Include="StructsAndEnums.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="\">
      <Link>LICENSE</Link>
    </None>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <PropertyGroup>
    <!--
    Hides warning like 
    /usr/local/share/dotnet/sdk/10.0.102/NuGet.Build.Tasks.Pack.targets(222,5): warning NU5123: The file 'lib/net9.0-ios18.0/Xam.Plugin.Mixpanel.iOS.resources/Mixpanel.xcframework/ios-arm64_x86_64-simulator/dSYMs/Mixpanel.framework.dSYM/Contents/Resources/Relocations/aarch64/Mixpanel.yml' path, name, or both are too long. Your package might not work without long file path support. Please shorten the file path or file name.
    -->
    <NoWarn>$(NoWarn);NU5123</NoWarn>
  </PropertyGroup>
</Project>
